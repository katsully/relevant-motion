<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/device_list"
        android:text="Device list:"
        android:textColor="@color/blue"
        android:textSize="16dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_below="@id/device_list"
        android:id="@+id/current_network"
        android:text="Current network:"
        android:textColor="@color/blue"
        android:textSize="16dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@id/current_network"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/current_IP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="CURRENT LICENSE:\nUNKNOWN"
                android:textColor="@color/blue"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/current_IP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textPersonName|numberDecimal"
                android:text="IP_Here" />

            <Button
                android:id="@+id/buttonIPSet"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:text="Set IP" />

            <Button
                android:id="@+id/btn_set_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Set license"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <TextView
                android:id="@+id/device_management_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="\nDEVICE MANAGEMENT"
                android:textColor="@color/blue"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_pair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Pair new device"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_sync_pair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Sync Pairing"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Connect to network"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Remove all device"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <TextView
                android:id="@+id/selected_channel_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Selected channel"
                android:textColor="@color/blue"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Disconnect"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_shutdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Shutdown"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Erase devices"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_change_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Change channel"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <TextView
                android:id="@+id/calibration_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="\nCALIBRATION"
                android:textColor="@color/blue"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_unchecked_init"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Unchecked Init"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_configure_calib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Configure calibration"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_calibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Start calibration"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_get_calibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Get calibration data"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <TextView
                android:id="@+id/steady_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="\nSTEADY"
                android:textColor="@color/blue"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_init_3_steady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="3 notch init"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_configure_steady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Configure steady"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_steady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Start steady"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_get_steady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Get steady data"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <TextView
                android:id="@+id/capture_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="\nCAPTURE"
                android:textColor="@color/blue"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/chk_realtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:text="Real-time"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <CheckBox
                android:id="@+id/chk_remote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:checked="false"
                android:text="Remote capture"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_init_3_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="3 notch init"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_configure_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Configure 2 sec capture"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Capture 2 sec"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Download"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_post_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Post-download"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_visualize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Visualize  "
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_show_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Show example"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_stop_osc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Stop OSC"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_start_osc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Start OSC"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

            <Button
                android:id="@+id/btn_set_IP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:background="@color/transparent"
                android:text="Set IP"
                android:textColor="@color/white"
                android:textSize="16dp"></Button>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_centerInParent="true"
        android:background="@color/gray"
        android:id="@+id/counter_text"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.25" />

        <ImageView
            android:id="@+id/dock_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:rotation="180"
            android:scaleType="fitCenter"
            android:src="@drawable/c0000" />

    </LinearLayout>


</RelativeLayout>